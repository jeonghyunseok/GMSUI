<script>
 
	var u1=document.getElementById("ul_stu");
 	var u2=document.getElementById("ul_grade");
 	var u3=document.getElementById("ul_board");
 	
 u1.setAttribute("class","list-group");
 u2.setAttribute("class","list-group");
 u3.setAttribute("class","list-group");
 
 	var ul_stu=u1.children;
 	var ul_grade=u2.children;
 	var ul_board=u3.children;
 
 	for(i=0;ul_stu.length;i++){
 		ul_stu[i].setAttribute("class","list-group-item");
 	} 	
 	for(i=0;ul_grade.length;i++){
 		ul_grade[i].setAttribute("class","list-group-item");
 	} 	
 	for(i=0;ul_board.length;i++){
 		ul_board[i].setAttribute("class","list-group-item");
 	} 	
 
 	ul_stu[0].setAttribute("onclick","moveTo('member','member_add')");
 	ul_stu[1].setAttribute("onclick","moveTo('member','member_list')");
 	ul_stu[2].setAttribute("onclick","moveTo('member','member_search')");
 	ul_stu[3].setAttribute("onclick","moveTo('member','member_update')");
 	ul_stu[4].setAttribute("onclick","deleteTarget('학생')");
 	
 	ul_grade[0].setAttribute("onclick","moveTo('grade','grade_add')");
 	ul_grade[1].setAttribute("onclick","moveTo('grade','grade_list')");
 	ul_grade[2].setAttribute("onclick","moveTo('grade','grade_detail')");
 	ul_grade[3].setAttribute("onclick","moveTo('grade','grade_update')");
 	ul_grade[4].setAttribute("onclick","deleteTarget('성적')");
 	
 	ul_board[0].setAttribute("onclick","moveTo('board','board_add')");	
 	ul_board[1].setAttribute("onclick","moveTo('board','board_list')");	
 	ul_board[2].setAttribute("onclick","moveTo('board','board_update')");	
 	ul_board[3].setAttribute("onclick","deleteTarget('게시글')");

		}	
</script>
