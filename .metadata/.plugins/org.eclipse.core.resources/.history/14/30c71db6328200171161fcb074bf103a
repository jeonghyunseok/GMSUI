	<script>
	  	
		function logout(){	
		location.href="${ctx}/common.do?action=move&page=index";
		return true;
		}		
		function moveTo(dir,page){
			location.href="${ctx}/"+dir+".do?action=move&page="+page;
			}
		function deleteTarget(target){
	 		prompt(target+'의 ID?');
	 	}
	
		var u1=document.getElementById("drop_stu");
	 	var u2=document.getElementById("drop_grade");
	 	var u3=document.getElementById("drop_board");
	 	
	 u1.setAttribute("class","dropdown-menu");
	 u2.setAttribute("class","dropdown-menu");
	 u3.setAttribute("class","dropdown-menu");
	 
	 	var drop_stu=u1.children;
	 	var drop_grade=u2.children;
	 	var drop_board=u3.children;
	 	
	 	nav_move.setAttribute("onclick","moveTo('common','move')");
	 	
	 	drop_stu[0].setAttribute("onclick","moveTo('member','member_add')")
	 	drop_stu[1].setAttribute("onclick","moveTo('member','member_list')")
	 	drop_stu[2].setAttribute("onclick","moveTo('member','member_search')")
	 	drop_stu[4].setAttribute("onclick","deleteTarget('학생')")
	 	
	 	drop_grade[0].setAttribute("onclick","moveTo('grade','grade_add')")
	 	drop_grade[1].setAttribute("onclick","moveTo('grade','grade_list')")
	 	drop_grade[2].setAttribute("onclick","moveTo('grade','grade_detail')")
		drop_grade[4].setAttribute("onclick","deleteTarget('성적')");
	 	
	 	drop_board[0].setAttribute("onclick","moveTo('board','board_add')")	
	 	drop_board[1].setAttribute("onclick","moveTo('board','board_list')")	
	 	drop_board[2].setAttribute("onclick","moveTo('board','board_update')")	
	 	drop_board[4].setAttribute("onclick","deleteTarget('게시글')")
		
		
	</script>