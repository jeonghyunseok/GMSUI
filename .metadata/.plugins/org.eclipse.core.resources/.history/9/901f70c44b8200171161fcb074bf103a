		<script>
		function memberAdd(){
			var join_id = document.getElementById("join_id").value;	
			var join_pass = document.getElementById("join_pass").value;	
			var join_name = document.getElementById("join_name").value;	
			var join_phone = document.getElementById("join_phone").value;	
			var join_ssn = document.getElementById("join_ssn").value;	
			if(join_id===""){
				alert('ID를 입력해 주세요');
				return false;
			}
			if(join_pass===""){
				alert('PASSWORD를 입력해 주세요');
				return false;
			}
			if(join_name===""){
				alert('name를 입력해 주세요');
				return false;
			}
			if(join_phone===""){
				alert('phone를 입력해 주세요');
				return false;
			}
			if(join_ssn===""){
				alert('ssn를 입력해 주세요');
				return false;
			}
			var form=document.getElementById("join_form");
			form.action="${ctx}/member.do?action=join&page=main";
			form.method="post"
			return true;
		}	
		</script>
